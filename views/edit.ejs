<%- include('./partials/header.ejs')%>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h1 class="alert alert-success text-center">Update Student</h1>
                <form method="post" action="/student/update/<%= data._id%>">
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name%>"/>
                    </div>
                    <div class="mb-3">
                        <label for="age" class="form-label">age</label>
                        <input type="text" class="form-control" id="age" name="age" value="<%= data.age%>"/>
                    </div>
                    <div class="mb-3">
                        <label for="fees" class="form-label">fees</label>
                        <input type="text" class="form-control" id="fees" name="fees" value="<%= data.fees%>"/>
                    </div>
                    <button type="submit" class="btn btn-warning">Update</button>
                    <button type="submit" class="btn btn-secondary">Back to home</button>
                </form>
            </div>
            
        </div>
    </div>
<%- include('./partials/footer.ejs')%>
    
